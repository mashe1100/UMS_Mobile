<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <ImageView
                android:id="@+id/ivJobOrderProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:paddingBottom="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp"
                android:src="@drawable/img_toolbar_logo" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Order"
                    android:textColor="@color/text_like_counter"
                    android:id="@+id/tvJobOrderTitle"
                    android:fontFamily="@string/main_font"
                    android:textSize="@dimen/feed_title"
                    android:paddingTop="8dp"
                    android:paddingLeft="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvJobOrderAging"
                    android:text="5 min ago"
                    android:textColor="@color/fab_color_shadow"
                    android:textSize="10sp"
                    android:paddingLeft="8dp"
                    />
                <TextSwitcher
                    android:id="@+id/tsJobOrderDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/main_font"
                        android:id="@+id/tvJobOrderDetails"
                        android:text="Details"
                        android:textColor="@color/feed_details" />

                </TextSwitcher>
            </LinearLayout>
        </LinearLayout>
