<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aseyel.tgbl.tristangaryleyesa.ReadingV2Activity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">
            <include
                android:id="@+id/toolbar"
                layout="@layout/view_toolbar" />
        </android.support.design.widget.AppBarLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="98dp"
            android:id="@+id/form_scroller"
            android:scrollbars="none"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <android.support.v7.widget.CardView
                    android:id="@+id/CardConsumerInformation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorAccent"
                    android:layout_marginTop="10dp"
                    app:cardElevation="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            >
                            <TextView
                                android:id="@+id/txtHeader"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textSize="20dp"
                                android:textColor="@color/colorPrimary"
                                android:text="Consumer Information"
                                android:fontFamily="@string/main_font"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            >
                            <TextView
                                android:id="@+id/txtAccountNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:textColor="@color/colorPrimary"
                                android:text="Account Number"
                                android:fontFamily="@string/main_font"
                                />
                            <TextView
                                android:id="@+id/txtAccountName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:textColor="@color/colorPrimary"
                                android:text="Account Name"
                                android:fontFamily="@string/main_font"
                                />
                            <TextView
                                android:id="@+id/txtAccountAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:textColor="@color/colorPrimary"
                                android:text="Address"
                                android:fontFamily="@string/main_font"
                                />
                            <TextView
                                android:id="@+id/txtMeterNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:textColor="@color/colorPrimary"
                                android:text="MeterNumber"
                                android:fontFamily="@string/main_font"
                                />
                            <TextView
                                android:id="@+id/txtAccountSequence"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:textColor="@color/colorPrimary"
                                android:text="Sequence"
                                android:fontFamily="@string/main_font"
                                />
                            <TextView
                                android:id="@+id/txtAccountStatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:textColor="@color/colorPrimary"
                                android:text="Status"
                                android:fontFamily="@string/main_font"
                                />
                            <TextView
                                android:id="@+id/txtAccountType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:textColor="@color/colorPrimary"
                                android:text="Type"
                                android:fontFamily="@string/main_font"
                                />
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/CardDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardElevation="10dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical"
                        >
                        <Switch
                            android:id="@+id/switchReverse"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:checked="false"
                            android:text="Check, If you want reverse input."
                            android:fontFamily="@string/main_font"
                            ></Switch>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:textColor="@color/colorAccent"
                                android:text="Reading"
                                android:fontFamily="@string/main_font"
                                android:layout_marginBottom="10dp"
                                />
                            <EditText
                                android:id="@+id/etxtReading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textColor="@color/colorAccent"
                                android:textColorHint="@color/colorAccent"
                                android:hint="Reading"
                                android:textSize="30dp"
                                android:fontFamily="@string/main_font"
                                android:inputType="numberDecimal|numberSigned" />


                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/formDemand"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:textColor="@color/colorAccent"
                                android:text="Demand"
                                android:fontFamily="@string/main_font"
                                android:layout_marginBottom="10dp"
                                />
                            <EditText
                                android:id="@+id/txtDemand"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textColor="@color/colorAccent"
                                android:textColorHint="@color/colorAccent"
                                android:hint="Demand"
                                android:textSize="30dp"
                                android:fontFamily="@string/main_font"
                                android:inputType="numberDecimal|numberSigned" />

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical"
            >
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:id="@+id/btnNext"
                    android:textColor="@color/colorPrimary"
                    android:background="@color/colorAccent"/>
            </android.support.v7.widget.CardView>
            <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
                android:id="@+id/mBottomNavigationView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom" />
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
    <com.miguelcatalan.materialsearchview.MaterialSearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</RelativeLayout>