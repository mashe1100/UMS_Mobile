<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.aseyel.tgbl.tristangaryleyesa.fragment.TrackingActivationFragment">
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/tab_tracking_activation_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeReload"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvTrackingActivationList"
                android:layout_width="84dp"
                android:layout_height="73dp"
                android:scrollbars="none"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
            </android.support.v4.widget.SwipeRefreshLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatBtnGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginBottom="150dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            app:layout_anchorGravity="top"
            app:borderWidth="0dp"
            app:elevation="12dp"
            app:layout_anchor="@+id/fabTrackingActivationAdd"
            app:srcCompat="@drawable/ic_action_image_white" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatBtnComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginBottom="80dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            app:layout_anchorGravity="top"
            app:borderWidth="0dp"
            app:elevation="12dp"
            app:layout_anchor="@+id/fabTrackingActivationAdd"
            app:srcCompat="@drawable/ic_action_comment_white" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabTrackingActivationAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:borderWidth="0dp"
            app:elevation="12dp"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@drawable/ic_action_add" />

    </android.support.design.widget.CoordinatorLayout>
    <!-- TODO: Update blank fragment layout -->



</RelativeLayout>
